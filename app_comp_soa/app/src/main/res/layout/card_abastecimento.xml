<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="30dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImagem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvPosto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Shell"
            android:textColor="@color/new_preto"
            android:textSize="34sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="10/10/2022"
                android:textColor="@color/new_cinza_escuro"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvComb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="GASOLINA"
                android:textColor="@color/new_cinza_escuro"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvTotLitros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvData"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="10L"
                android:textColor="@color/new_cinza_escuro"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvValorLitro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="71dp"
                android:layout_toEndOf="@+id/tvTotLitros"
                android:layout_toRightOf="@+id/tvTotLitros"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="R$ 2,75"
                android:textColor="@color/new_cinza_escuro"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvValorTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="R$ 27,50"
                android:textColor="@color/new_cinza_escuro"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/editar"
                app:backgroundTint="@color/verde"
                app:icon="@drawable/ic_baseline_edit_24"
                app:iconGravity="textEnd" />

            <Button
                android:id="@+id/btnExcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/excluir"
                app:backgroundTint="@color/vermelho"
                app:elevation="0dp"
                app:icon="@drawable/ic_baseline_delete_24"
                app:iconGravity="textEnd" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>